<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.id %></td>
        <td><%= link_to 'Show', story_chapters_path %></td>


      </tr>
    <% end %>
  </tbody>
</table>

