<%= simple_form_for(@story) do |f| %>
    <%= f.error_notification %>
    <%= f.input :title, label: "Story title" %>
    <%= f.simple_fields_for :chapters, @story.chapters.build do |c| %>
        <%= c.input :user_text, label: "Chapter content" %>
        <%= c.simple_fields_for :options, c.object.options.build do |o| %>
            <%= o.input :option_text, label: "Option content" %>
<%=               %>
        <% end %>
    <% end %>
    <%= f.button :submit %>
<% end %>

