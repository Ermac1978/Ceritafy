<center><%= link_to 'Start A New Story', new_story_path, class:"btn btn-warning btn-lg" %></center>
  <br>

<!-- Page Content -->
<div class="container">
  <!-- Page Header -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">My Library
        <small></small>
      </h1>
    </div>
  </div>
  <!-- /.row -->
  <!-- Projects Row -->
  <div class="row">
    <% @stories.each do |story| %>
        <div class="col-md-4 col-sm-6 portfolio-item">
          <div class="thumbnail">
            <%= image_tag "4259.png" %>
              <h3>
                <%= story.title %>
              </h3>
              <p><%= link_to 'Read', story_chapter_path(story, story.first_chapter), class:'btn btn-primary btn-lg btn-block' %></p>
              <p><%= link_to 'Edit', edit_story_path(story), class:'btn btn-success btn-lg btn-block' %></p>
              <p><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-lg btn-block' %></p>
          </div>
        </div>
    <% end %>
  </div>
  <!-- /.row -->
  <hr>
</div>