<h1>My Stories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>View Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%=story.title %></td>
        <td><%= story.impressionist_count %></td>
        <td><%= link_to 'Read', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %> </td>
        <td><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




