<h1>My Stories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to stories_path(order_by: 'title DESC') do %>
            <span>Title</span>
          <% end %>
      </th>
      <th><%= link_to stories_path(order_by: 'impressions_count desc') do %>
        <span>View Count </span>
        <% end %>
      </th>
      <th><%= link_to stories_path(order_by: 'created_at ASC') do %>
            <span>Created At </span>
          <% end %>
      </th>
      <th><%= link_to stories_path(order_by: 'updated_at ASC') do %>
            <span>Updated At </span>
          <% end %>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.title %></td>
        <td><%= story.impressions_count %></td>
        <td><%= story.created_at %></td>
        <td><%= story.updated_at %></td>
        <td><%= link_to 'Read', story_chapter_path(story, story.first_chapter) %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %> </td>
        <td><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




