<fieldset>
  <%= f.label :chapter_num, "Chapter Number" %>
  <%= f.text_field :chapter_num, class: "chapter_num" %><br>
  <%= f.text_area :user_text, class: "user_text" %><br />
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove Chapter" %>
  <%= f.fields_for :options do |builder| %>
      <%= render 'option_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Option", f, :options %>
</fieldset>